<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net9.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Antlr4.Runtime.Standard" Version="4.13.1" />
    <PackageReference Include="Antlr4BuildTasks" Version="12.14.0" />
  </ItemGroup>

  <ItemGroup>
    <Antlr4 Include="Grammar/*.g4">
      <Package>Brash.Compiler.Frontend</Package>
      <Namespace>Brash.Compiler.Frontend.Parser</Namespace>
      <Listener>true</Listener>
      <Visitor>true</Visitor>
      <GAntlrOutputPath>Frontend/Generated</GAntlrOutputPath>
    </Antlr4>
  </ItemGroup>

</Project>
